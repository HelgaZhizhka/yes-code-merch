{
  "name": "yes-code-merch",
  "version": "0.1.0",
  "description": "A modern web application built with React, Tailwind CSS, and Vite.",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/HelgaZhizhka/yes-code-merch.git"
  },
  "scripts": {
    "dev": "vite --port 3000 --open",
    "start": "vite --port 3000 --open",
    "build": "vite build && tsc",
    "serve": "vite preview",
    "test": "vitest run --config vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.unit.config.ts",
    "test:storybook": "vitest run --config vitest.storybook.config.ts",
    "lint": "cross-env NODE_OPTIONS=--no-warnings eslint . --report-unused-disable-directives",
    "lint:fix": "cross-env NODE_OPTIONS=--no-warnings eslint . --fix --report-unused-disable-directives",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --list-different --ignore-unknown .",
    "check": "npm run format && npm run lint:fix",
    "prepare": "husky",
    "lint:styles": "stylelint \"**/*.css\"",
    "lint:styles:fix": "stylelint \"**/*.css\" --fix",
    "gen:types": "supabase gen types typescript --project-id tlnboeuoaezawexbrblg --schema public > src/shared/api/database.types.ts",
    "storybook": "NODE_NO_WARNINGS=1 storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.50.0",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.66.5",
    "@tanstack/react-router": "^1.114.3",
    "@tanstack/react-router-devtools": "^1.114.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "lucide-react": "^0.476.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.59.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.5",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.27.0",
    "@storybook/addon-a11y": "^9.0.15",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-onboarding": "^9.0.15",
    "@storybook/addon-themes": "^9.0.15",
    "@storybook/addon-vitest": "^9.0.15",
    "@storybook/react-vite": "^9.0.15",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "3.1.4",
    "@vitest/coverage-v8": "3.1.4",
    "class-variance-authority": "^0.7.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.15",
    "eslint-plugin-unicorn": "^58.0.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.1",
    "playwright": "^1.53.2",
    "postal-codes-js": "^2.5.2",
    "prettier": "^3.5.3",
    "storybook": "^9.0.15",
    "stylelint": "^16.19.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^38.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "pnpm run check",
    "*.css": "pnpm run lint:styles:fix"
  }
}
